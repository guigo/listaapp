<!DOCTYPE html>
<html>
  <head>
    <title>Lista</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <div class="grid-container">
      <nav class="navbar bg-light">
        <a class="navbar-brand" href="/">
          <%= image_tag('logo.png', size: "60") %>
        </a>

        <% if current_user %>
        <div class="dropdown ml-auto">
          <a class="dropdown-toggle" href="#" role="button" id="dropdownCar" data-toggle="dropdown">
             <%= fa_icon "shopping-cart", class: 'shopping-cart' %>&nbsp;&nbsp;&nbsp;<small>(10)</small>
          </a>
        </div>
         <div class="dropdown ml-auto">
            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true"
              aria-expanded="false">
              <%= image_tag(current_user.image ? urrent_user.image.exists : 'https://caruarucity.com.br/wp-content/uploads/2016/12/avatar-vazio.jpg', size: "30", class: "avatar")%>
              <%= current_user.name %>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
              <%= link_to 'Sair', destroy_user_session_path, :method => :delete, class: 'dropdown-item text-danger' %>
            </div>
          <% else %>
            <form class="form-inline">
              <a class="btn btn-outline-primary" href="/login" role="button">
                Login
              </a>
              <div style="padding-left: 10px;">
              <a class="btn btn-outline-success" href="/users/sign_out" role="button">
              Sign Up
              </a>
              </div>
            </form>
          <% end %>
        </nav>
        <%= yield %>
      </div>
  </body>
</html>
