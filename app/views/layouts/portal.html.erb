<!DOCTYPE html>
<html>
  <head>
    <title>Lista</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <div class="grid-container">
      <nav class="navbar bg-light">
        <div class="container">
        <a class="navbar-brand" href="/">
          <%= image_tag('logo.png', size: "60") %>
        </a>
        <% if current_user %>
          <div class="dropdown">
              <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown">
                <%= image_tag(current_user.image ?  current_user.image : 'https://caruarucity.com.br/wp-content/uploads/2016/12/avatar-vazio.jpg', size: "30", class: "avatar")%>
                <%= current_user.name %>
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                <%= link_to 'Sair', destroy_user_session_path, :method => :delete, class: 'dropdown-item text-danger' %>
              </div>
           </div>
          <% else %>
            <form class="form-inline">
              <a class="btn btn-outline-primary" href="/login" role="button">
                Login
              </a>
              <div style="padding-left: 10px;">
              <a class="btn btn-outline-success" href="/users/sign_out" role="button">
              Sign Up
              </a>
              </div>
            </form>
          <% end %>
          </div>
        </nav>
        <%= yield %>
      </div>
  </body>
</html>
