<% @products.each do |p| %>
  <div class="col-md-3 col-xs-12 col-12">
    <div class="card">
       <%= image_tag('no-image-available.jpg', class: "card-img-top")%>
       <div class="card-body">
         <p  class="text-center">
           <small>CÃ³digo: <%= p.code %></small>
         </p>
         <p class="card-text">
           <%= p.description %>
         </p>
         <%= form_for([:portal, @order_item], remote: true) do |f| %>
          <%= f.hidden_field :product_id, value: p.id %>
           <p class="price text-center">
             R$ <em><%= p.price %></em>
           </p>
           <div class="text-center" style="margin-bottom: 15px;">
             Qtd.
             <%= f.select :quantity, [1,2,3,4,5,6,7,8,9] %>
           </div>
           <% if p.amount > 0 %>
           <%= f.submit 'Adicionar', class: 'btn btn-lista btn-block'%>
           <% else %>
             Produto comprado
           <% end %>
         <% end %>
       </div>
     </div>
  </div>
<% end %>
