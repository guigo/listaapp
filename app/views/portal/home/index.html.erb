<div class="container" style="margin-top: 2px;">
  <div class="row">
    <div class="bg col-md-4 col-12" style="height: 600px;" >
    </div>
    <div class="col-md-8 col-12">
      <div class="card">
        <div class="card-header">
           <h1>Lista de Presentes</h1>
        </div>
         <div class="card-body">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col"></th>
                  <th scope="col">Item</th>
                  <th scope="col">Quantidade</th>
                  <th scope="col">Valor</th>
                  <th scope="col"></th>
                </tr>
              </thead>
              <tbody>
                 <% @products.each do |p| %>
                <tr>
                  <td>
                    <a href="#" class="map">
                    <%= fa_icon "map" %>
                   </a>                  </td>
                  <td>
                    <%= p.description %>( REF: <%= p.code %>)
                  </td>
                  <td>
                    <%= p.amount %>
                  </td>
                  <td>
                     R$ <%= p.price %>
                  </td>
                  <td>
                    <button class="btn btn-default add">
                       <%= fa_icon "plus-circle" %>
                    </button>
                    <button class="btn btn-default remove">
                       <%= fa_icon "minus-circle" %>
                    </button>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
            <button class="btn btn-block btn-lista">
              Imprimir Lista
            </button>
          </div>
        </div>
    </div>
  </div>
</div>
