<div class="container">
  <div class="background">
    <div class="col-md-3 col-xs-12">
     <div class="header-perfil">
        <%= image_tag('no-image-available.jpg', class: "avatar-perfil")%>
     </div>
    </div>
  </div>
  <div class="header-bottom">
    <div class="row" style="padding: 5px">
      <div class="col-md-3">
        <a href="#" class="btn btn-lista">Imprimir Lista</a>
      </div>
      <div class="col-md-8 col-xs-12">
        <small>
           <strong> Local: </strong>Av. Comendador Thomaz Fortunato Nº 2000, Praia dos Namorador - Americana <br />
           <strong> Data do Evento: </strong> 15 de dezembro de 2019
        </small>
      </div>
      <div class="dropdown" style="margin-right: 20px;">
        <a class="dropdown-toggle" href="#" role="button" id="dropdownCar" data-toggle="dropdown">
           <%= fa_icon "shopping-cart", class: 'shopping-cart' %>&nbsp;&nbsp;&nbsp;<small>(3)</small>
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownCar" style="width: 330px;">
          <div class="col-md-12 col-xs-12 col-12">
            <ul class="list-car">
              <li  class="nav-item">
                Porta Temperos c/5 pcs Inox/Vidro
                <a hre="#" class="pull-right">
                  <%= fa_icon "trash"%>
                </a>
              </li>
              <li>
                Colher Sorvete Inox Tramontina
                <a hre="#" class="pull-right">
                  <%= fa_icon "trash"%>
                </a>
              </li>
            </ul>
          </div>
          <hr />
          <a class="btn btn-lista col-md-11"href="#">
            Ver Carrinho
          </a>
        </div>
      </div>
    </div>
  </div>
  <h1 class="title">Lista do Chá da Ray</h1>
  <hr />
  <div class="row">
    <% @products.each do |p| %>
    <div class="col-md-3 col-xs-12 col-12">
      <div class="card">
         <%= image_tag('no-image-available.jpg', class: "card-img-top")%>
         <div class="card-body">
           <p  class="text-center">
             <small>Código: <%= p.code %></small>
           </p>
           <p class="card-text">
             <%= p.description %>
           </p>
           <p class="price text-center">
             R$ <em><%= p.price %></em>
           </p>
           <div class="text-center">
             Qtd.
             <select style="margin-bottom: 15px;">
                <option value="1">1</option>
                <option value="2">2</option>
             </select>
           </div>
           <a class="btn btn-lista btn-block" href="#">
                <%= fa_icon "shopping-cart"%>&nbsp;&nbsp;Adicionar
           </a>
           <!-- <img src="https://www.w3schools.com/howto/img_avatar.png" class="avatar"> -->
         </div>
       </div>
    </div>
    <% end %>
  </div>
</div>
